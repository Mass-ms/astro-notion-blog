---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'
import Budoux from "../components/Budoux.astro";

export interface Props {
  post: Post
  enableLink: boolean
}

const { post, enableLink = true } = Astro.props

let title = post.Title
---

<h2 class="post-title">
  <Budoux>
    {enableLink ? (
      <a href={getPostLink(post.Slug)}>
        {title}
        
      </a>
    ) : (
      title
    )}
  </Budoux>
</h2>

<style>
  .post-title {
    margin: 0;
    font-size: 2rem;
    font-weight: 300;
    color: var(--fg);
  }
  .post-title h2 {
    width: 100%;
  }
  .post-title a {
    font-size: 1.0rem;
    color: inherit;
  }
  .post-title span,
  .post-title img {
    display: inline-block;
    margin-right: 0.2em;
  }
  .post-title span {
    font-size: 1.2em;
  }
  .post-title img {
    width: 1.3em;
    height: 1.3em;
    vertical-align: sub;
  }
  @media (max-width: 640px) {
    .post-title {
      font-size: 1.4rem;
    }
    .post-title a {
      font-size: 1.2rem;
    }
  }
</style>
