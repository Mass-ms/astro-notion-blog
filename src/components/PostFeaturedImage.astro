---
import { Post } from '../lib/interfaces.ts'
import { filePath, getFallbackImage } from '../lib/blog-helpers'
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props

let image = ''
if (post.FeaturedImage && post.FeaturedImage.Url) {
  // FeaturedImageが設定されている場合
  if (import.meta.env.DEV) {
    image = post.FeaturedImage.Url
  } else {
    image = filePath(new URL(post.FeaturedImage.Url))
  }
} else {
  // FeaturedImageがない場合はフォールバック画像を使用
  image = getFallbackImage(post)
}
---

{
  image && (
    <div class="post-featured-image">
      <a href={getPostLink(post.Slug)}>
        <img src={image} alt="Featured image of the post" />
      </a>
    </div>
  )
}

<style>
  .post-featured-image {
    padding: 0.6rem 0 0.2rem;
  }
  .post-featured-image img {
    display: block;
    height: 20rem;
    width: 20rem;
    object-fit: cover;
  }
</style>
